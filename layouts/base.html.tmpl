<html lang="de">
  <head>
    <meta charset="utf-8">
    <title>{{.Params.title}}</title>

    <meta name="description" content="{{.Params.description}}">
    <meta name="keywords" content="{{.Params.keywords}}">
    <meta name="viewport" content="initial-scale=1">

    <meta property="og:url"         content="{{.Params.baseUrl}}">
